#!/usr/bin/env node

const { spawn } = require('child_process');

// Simple and direct approach - use npx
console.log('ðŸš€ Starting with npx vite...');

const child = spawn('npx', ['vite', '--host', '::', '--port', '8080'], {
  stdio: 'inherit',
  env: process.env
});

child.on('error', (err) => {
  console.error('âŒ Error:', err.message);
  process.exit(1);
});

child.on('exit', (code) => {
  process.exit(code);
});