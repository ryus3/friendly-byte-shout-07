#!/usr/bin/env node

// Vite executable wrapper
const { spawnSync } = require('child_process');

console.log('ğŸš€ Vite Wrapper Starting...');

const result = spawnSync('npx', ['vite', '--host', '::', '--port', '8080'], {
  stdio: 'inherit',
  shell: true
});

if (result.error) {
  console.error('âŒ Error:', result.error.message);
  process.exit(1);
}

process.exit(result.status || 0);