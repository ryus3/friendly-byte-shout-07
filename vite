#!/bin/bash

echo "ğŸš€ Starting Vite..."

# Try multiple vite locations
if [ -f "./node_modules/vite/bin/vite.js" ]; then
  echo "âœ… Using direct vite.js"
  exec node ./node_modules/vite/bin/vite.js "$@"
elif [ -f "./node_modules/.bin/vite" ]; then
  echo "âœ… Using .bin/vite"
  exec ./node_modules/.bin/vite "$@"
elif command -v npx >/dev/null 2>&1; then
  echo "âœ… Using npx vite"
  exec npx vite "$@"
else
  echo "âŒ No vite found, installing..."
  npm install && exec ./vite "$@"
fi