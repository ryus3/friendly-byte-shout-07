#!/usr/bin/env node
// Universal vite launcher for all environments
const { spawn } = require('child_process');
const path = require('path');

console.log('ðŸš€ Universal Vite Launcher Starting...');

// Try direct node execution first
const vitePath = path.resolve(__dirname, 'node_modules/vite/bin/vite.js');
console.log('ðŸ“ Vite path:', vitePath);

const viteProcess = spawn('node', [vitePath, '--host', '::', '--port', '8080'], {
  stdio: 'inherit',
  shell: false
});

viteProcess.on('error', (err) => {
  console.error('âŒ Vite process error:', err.message);
  process.exit(1);
});

viteProcess.on('close', (code) => {
  console.log(`ðŸ”„ Vite process exited with code ${code}`);
  process.exit(code);
});